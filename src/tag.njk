---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag }}/
---
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ tag }} Periodic Tables | Free Periodic Tables</title>
    <meta name="description" content="{{ tag }} Periodic Tables | Free Periodic Tables">
    <link rel="icon" type="image/png" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
    <meta name="image" content="/images/share-image.png">
    <meta name="theme-color" content="#ffffff">
    <meta name="author" content="Zachary Crespin">
    <meta name="generator" content="eleventy">
    {% set css %}
    {% include "style.css" %}
    {% endset %}
    <style>
    {{ css | cssmin | safe }}
    </style>
    <!-- Open Graph -->
    <meta property="og:url" content="https://periodictables.zacharyc.site{{ page.url }}">
    <meta property="og:title" content="{{ tag }} Periodic Tables | Free Periodic Tables">
    <meta property="og:description" content="{{ tag }} Periodic Tables | Free Periodic Tables">
    <meta property="og:image" content="https://periodictables.zacharyc.site/images/share-image.png">
    <meta property="og:image:alt" content="{{ tag }} Periodic Tables">
    <meta property="og:site_name" content="Free Periodic Tables">
    <!-- Twitter -->
    <meta name="twitter:title" content="{{ tag }} Periodic Tables | Free Periodic Tables">
    <meta name="twitter:description" content="{{ tag }} Periodic Tables | Free Periodic Tables">
    <meta name="twitter:image" content="https://periodictables.zacharyc.site/images/share-image.png">
    <meta name="twitter:image:alt" content="{{ tag }} Periodic Tables">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@ZacharyCrespin">
    <meta name="twitter:creator" content="@ZacharyCrespin">
</head>
<body>
    <header>
    <nav class="menu" id="menu" role="navigation">
      <a href="/">Home</a>
    </nav>
    </header>
    <main id="content">
      <h1>{{ tag | toTitleCase }} Periodic Tables</h1>
{% include 'tagnav.njk' %}
      <div class="gallery">
      {% set taglist = collections[ tag ] %}
      {% for post in taglist | reverse %}
        <div class="table {{ post.data.theam }}">
          <h2>{{ post.data.name }}</h2>
          <img src="/images/{{ post.data.id }}.png" loading="lazy" alt="Table" data-pin-id="{{ post.data.pinid }}">
          <br>{% for tag in post.data.tags -%}
          {% if tag !== 'table' %}
          <a class="tag" href="/tag/{{ tag }}">{{ tag }}</a>
          {% endif %}
          {%- endfor %}<br>
          <a class="button" href="/table/{{ post.data.id }}">View / Download</a>
        </div>
      {% endfor %}
      </div>
    </main>
{% include 'footer.njk' %}
</body>
</html>